<html>
    <head>
        <style>
            .topnav {
  background-color: #333;
  overflow: hidden;
  width: auto;
}

/* Style the links inside the navigation bar */
.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

/* Change the color of links on hover */
.topnav a:hover {
  background-color: #ddd;
  color: black;
}

/* Add a color to the active/current link */
.topnav a.active {
  background-color: #4CAF50;
  color: white;
}
.topnav a.logout{
    float: right;
}
.heading{
  float: right;
}
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  border-radius: 5px; /* 5px rounded corners */
  width: 40%;
}


.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 12px;
}

/* Add some padding inside the card container */
.container {
  padding: 2px 12px;
}
        </style>
    </head>
    <body>
        <div class="topnav">
  <a class="active" href="/dashboard">Home</a>
  <a href="/addDetails">add details</a>
  <a href="/viewDetails">view details</a>
  <a class="logout" href="/auth/logout">logout</a>
</div>
<div class="heading">
<h3>welcome{{Username}}</h3>
</div>

 {{#each details}}
<div class="card">
  <div class="container">
    <h4><b>{{uid}}</b></h4> 
    <h4>{{name}}</h4>
     <h4>{{formatDate registraion 'MMMM Do YYYY,h:mm:ss a'}}</h4>
      <h4>{{formatDate expire 'MMMM Do YYYY,h:mm:ss a'}}</h4>
       <h4>{{url}}</h4>
       <h4>{{mail}}</h4>
       <h4>{{web}}</h4>
       <h4>{{contact}}</h4>
       
  </div>
</div>
 {{/each}}
    </body>
</html>

